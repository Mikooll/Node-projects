extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://upload.wikimedia.org/wikipedia/commons/thumb/7/76/Livre_Trion_consultable_sur_place_-_Fonds_ancien_%28bibliothèque_municipale_de_Lyon%29.jpg/800px-Livre_Trion_consultable_sur_place_-_Fonds_ancien_%28bibliothèque_municipale_de_Lyon%29.jpg", alt='A Book')
                        div.card__content
                            h2.product__price 19.99$
                            p.product__description A very interesting book
                        div.card__actions
                            button.btn Add To Cart
        else 
            h1 No Products